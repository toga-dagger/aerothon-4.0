  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mongoose": "^6.0.4",
    "morgan": "^1.10.0",
    "trunks-log": "^2.0.3"
  },
  "devDependencies": {
    "boxen": "^5.0.1",
    "chalk": "^4.1.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2"
  },
  "nodemonConfig": {
    "ignore": [
      "client/*"
    ],
    "delay": 1500
  }
}
